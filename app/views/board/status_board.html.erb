<div id="dashboard" class="container-fluid">
  <div class="row-fluid">
    <div id="standings" class="span4">
      <h2>Standings</h2>
      <div class="contestants">
      </div>
    </div>

    <div class="span8">
      <div id="most-recent-heat">
        <h2>Previous Heat</h2>
        <div class="row-fluid lanes">
          <small class="span4">Lane 1</small>
          <small class="span4">Lane 2</small>
          <small class="span4">Lane 3</small>
        </div>
        <div class="row-fluid">
          <div class="span4 lane1">
            <div class="name"></div>
            <div class="time"></div>
          </div>
          <div class="span4 lane2">
            <div class="name"></div>
            <div class="time"></div>
          </div>
          <div class="span4 lane3">
            <div class="name"></div>
            <div class="time"></div>
          </div>
        </div>
      </div>

      <div id="upcoming-heats">
        <h2>
          Up next...
          <% if admin? %>
            <%= link_to 'Start the race!', new_race_path, id: 'start-race', class: 'btn btn-success btn-large', remote: true, style: 'display: none' %>
          <% end %>
        </h2>
        <div class="row-fluid">
          <div class="span4">
            <small>Lane1</small>
          </div>
          <div class="span4">
            <small>Lane2</small>
          </div>
          <div class="span4">
            <small>Lane3</small>
          </div>
        </div>
        <div class="row-fluid next1">
          <div class="span4 name lane1"></div>
          <div class="span4 name lane2"></div>
          <div class="span4 name lane3"></div>
        </div>
        <div class="row-fluid"><hr></div>
        <div class="row-fluid next2">
          <div class="span4 name lane1"></div>
          <div class="span4 name lane2"></div>
          <div class="span4 name lane3"></div>
        </div>
        <div class="row-fluid"><hr></div>
        <div class="row-fluid next3">
          <div class="span4 name lane1"></div>
          <div class="span4 name lane2"></div>
          <div class="span4 name lane3"></div>
        </div>
      </div>
    </div>
  </div>
</div>
