<div id="dashboard">
  <div class="row-fluid">
    <div class="span8 pull-right no-left-margin">
      <div id="most-recent-heat">
        <div class="row-fluid">
          <h2 class="span12">
            Previous Heat
            <% if admin? %>
              <%= link_to 'redo', '#', id: 'redo', class: 'btn btn-danger', style: 'display: none' %>
            <% end %>
          </h2>
        </div>
        <div class="row-fluid lanes">
          <% DerbyConfig.lane_count.times do |i| %>
            <small class="<%= BoardHelper.lane_column_width %>">Lane <%= i + 1 %></small>
          <% end %>
        </div>
        <div class="row-fluid">
          <% DerbyConfig.lane_count.times do |i| %>
            <div class="<%= BoardHelper.lane_column_width %> lane<%= i+1 %>">
              <div class="name"></div>
              <div class="time"></div>
            </div>
          <% end %>
        </div>
      </div>

      <div id="upcoming-heats">
        <h2>
          Up next...
          <% if admin? %>
            <%= link_to 'Start the race!', '#', id: 'start-race', class: 'btn btn-success', style: 'display: none' %>
          <% end %>
        </h2>
        <div class="row-fluid">
          <% DerbyConfig.lane_count.times do |i| %>
            <div class="<%= BoardHelper.lane_column_width %>">
              <small>Lane<%= i + 1 %></small>
            </div>
          <% end %>
        </div>
        <% if admin? %>
          <i class="cancel-heat icon-remove-circle" style="opacity: 0;" title="Cancel heat"></i>
        <% end %>
        <div class="row-fluid next1">
          <% DerbyConfig.lane_count.times do |i| %>
            <div class="<%= BoardHelper.lane_column_width %> name lane<%= i + 1 %>"></div>
          <% end %>
        </div>
        <div class="row-fluid"><hr></div>
        <div class="row-fluid next2">
          <% DerbyConfig.lane_count.times do |i| %>
            <div class="<%= BoardHelper.lane_column_width %> name lane<%= i + 1 %>"></div>
          <% end %>
        </div>
        <div class="row-fluid"><hr></div>
        <div class="row-fluid next3">
          <% DerbyConfig.lane_count.times do |i| %>
            <div class="<%= BoardHelper.lane_column_width %> name lane<%= i + 1 %>"></div>
          <% end %>
        </div>
      </div>
    </div>

    <div id="standings" class="span4 pull-left no-left-margin">
      <h2>Standings</h2>
      <div class="contestants">
      </div>
    </div>
  </div>
</div>
